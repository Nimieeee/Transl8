{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/index.ts",
    "src/stt-worker.ts",
    "src/translation-worker.ts",
    "src/tts-worker.ts",
    "src/muxing-worker.ts",
    "src/lib/prisma.ts",
    "src/lib/queue.ts"
  ],
  "exclude": ["node_modules", "dist", "src/old", "src/lib/old"]
}
