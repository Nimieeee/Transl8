{
  "dashboard": {
    "title": "Model Performance Dashboard",
    "tags": ["models", "inference", "gpu"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Inferences (24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(model_inference_total[24h]))",
            "legendFormat": "Inferences"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Average GPU Utilization",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(model_gpu_utilization)",
            "legendFormat": "GPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 70, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0}
      },
      {
        "id": 3,
        "title": "Model Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(model_errors_total[24h])) / sum(increase(model_inference_total[24h])) * 100",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0}
      },
      {
        "id": 4,
        "title": "Average Inference Time",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(model_inference_duration_avg)",
            "legendFormat": "Avg Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 0
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0}
      },
      {
        "id": 5,
        "title": "Total GPU Memory Used",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(model_memory_usage) / 1024 / 1024 / 1024",
            "legendFormat": "Memory GB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "decimals": 1
          }
        },
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0}
      },
      {
        "id": 6,
        "title": "Inference Latency by Model (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "model_inference_duration_p95",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 7,
        "title": "GPU Utilization by Model",
        "type": "graph",
        "targets": [
          {
            "expr": "model_gpu_utilization",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 8,
        "title": "Inference Rate by Model",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (model) (rate(model_inference_total[5m]))",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Inferences/sec"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 9,
        "title": "Model Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "model_memory_usage / 1024 / 1024 / 1024",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "decgbytes", "label": "Memory (GB)"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 10,
        "title": "Model Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (model) (rate(model_errors_total[5m]))",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors/sec"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 11,
        "title": "Input Size Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "model_input_size_avg",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "decbytes", "label": "Input Size"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 12,
        "title": "GPU Temperature",
        "type": "graph",
        "targets": [
          {
            "expr": "DCGM_FI_DEV_GPU_TEMP",
            "legendFormat": "GPU {{gpu}} on {{kubernetes_node}}"
          }
        ],
        "yaxes": [
          {"format": "celsius", "label": "Temperature"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 13,
        "title": "GPU Power Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "DCGM_FI_DEV_POWER_USAGE",
            "legendFormat": "GPU {{gpu}} on {{kubernetes_node}}"
          }
        ],
        "yaxes": [
          {"format": "watt", "label": "Power (W)"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
      },
      {
        "id": 14,
        "title": "Batch Size by Model",
        "type": "graph",
        "targets": [
          {
            "expr": "model_batch_size",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Batch Size"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36}
      },
      {
        "id": 15,
        "title": "Throughput (items/sec)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (model) (rate(model_items_processed_total[5m]))",
            "legendFormat": "{{model}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Items/sec"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36}
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
