FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    requests==2.31.0 \
    prometheus-client==0.19.0

# Copy exporter script
COPY cost-tracking-exporter.py /app/

# Make script executable
RUN chmod +x /app/cost-tracking-exporter.py

# Expose metrics port
EXPOSE 9091

# Run exporter
CMD ["python", "/app/cost-tracking-exporter.py"]
