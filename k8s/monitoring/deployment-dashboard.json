{
  "dashboard": {
    "title": "Deployment Monitoring",
    "tags": ["deployment", "kubernetes", "ci-cd"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Deployment Status",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_deployment_status_replicas_available",
            "legendFormat": "{{ deployment }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Deployment Rollout Progress",
        "type": "graph",
        "targets": [
          {
            "expr": "kube_deployment_status_replicas_updated{namespace=~\"production|staging\"}",
            "legendFormat": "{{ deployment }} - Updated"
          },
          {
            "expr": "kube_deployment_spec_replicas{namespace=~\"production|staging\"}",
            "legendFormat": "{{ deployment }} - Desired"
          }
        ]
      },
      {
        "id": 3,
        "title": "Pod Restart Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kube_pod_container_status_restarts_total{namespace=~\"production|staging\"}[5m])",
            "legendFormat": "{{ pod }}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate by Deployment",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\",namespace=~\"production|staging\"}[5m])) by (deployment) / sum(rate(http_requests_total{namespace=~\"production|staging\"}[5m])) by (deployment) * 100",
            "legendFormat": "{{ deployment }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Response Time P95",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=~\"production|staging\"}[5m])) by (le, deployment))",
            "legendFormat": "{{ deployment }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 6,
        "title": "Deployment Events",
        "type": "table",
        "targets": [
          {
            "expr": "changes(kube_deployment_status_observed_generation{namespace=~\"production|staging\"}[1h])",
            "format": "table"
          }
        ]
      },
      {
        "id": 7,
        "title": "Container Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=~\"production|staging\",container!=\"\"} / container_spec_memory_limit_bytes * 100",
            "legendFormat": "{{ pod }} - {{ container }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100
          }
        }
      },
      {
        "id": 8,
        "title": "Container CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=~\"production|staging\",container!=\"\"}[5m]) / container_spec_cpu_quota * 100",
            "legendFormat": "{{ pod }} - {{ container }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100
          }
        }
      },
      {
        "id": 9,
        "title": "HPA Status",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_horizontalpodautoscaler_status_current_replicas{namespace=~\"production|staging\"}",
            "legendFormat": "{{ horizontalpodautoscaler }} - Current"
          },
          {
            "expr": "kube_horizontalpodautoscaler_status_desired_replicas{namespace=~\"production|staging\"}",
            "legendFormat": "{{ horizontalpodautoscaler }} - Desired"
          }
        ]
      },
      {
        "id": 10,
        "title": "Database Migration Jobs",
        "type": "table",
        "targets": [
          {
            "expr": "kube_job_status_succeeded{job_name=~\"prisma-migrate.*\"}",
            "format": "table"
          },
          {
            "expr": "kube_job_status_failed{job_name=~\"prisma-migrate.*\"}",
            "format": "table"
          }
        ]
      },
      {
        "id": 11,
        "title": "Blue-Green Deployment Status",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_deployment_status_replicas_available{deployment=~\".*-blue\",namespace=\"production\"}",
            "legendFormat": "Blue - {{ deployment }}"
          },
          {
            "expr": "kube_deployment_status_replicas_available{deployment=~\".*-green\",namespace=\"production\"}",
            "legendFormat": "Green - {{ deployment }}"
          }
        ]
      },
      {
        "id": 12,
        "title": "Traffic Distribution (Blue vs Green)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{deployment=~\".*-blue\",namespace=\"production\"}[5m])) by (deployment)",
            "legendFormat": "Blue - {{ deployment }}"
          },
          {
            "expr": "sum(rate(http_requests_total{deployment=~\".*-green\",namespace=\"production\"}[5m])) by (deployment)",
            "legendFormat": "Green - {{ deployment }}"
          }
        ]
      },
      {
        "id": 13,
        "title": "Deployment Timeline",
        "type": "graph",
        "targets": [
          {
            "expr": "kube_deployment_status_observed_generation{namespace=~\"production|staging\"}",
            "legendFormat": "{{ deployment }}"
          }
        ]
      },
      {
        "id": 14,
        "title": "Failed Pods",
        "type": "table",
        "targets": [
          {
            "expr": "kube_pod_status_phase{phase=\"Failed\",namespace=~\"production|staging\"}",
            "format": "table"
          }
        ]
      },
      {
        "id": 15,
        "title": "Image Pull Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_waiting_reason{reason=\"ImagePullBackOff\",namespace=~\"production|staging\"}) by (namespace, pod)",
            "legendFormat": "{{ namespace }}/{{ pod }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
