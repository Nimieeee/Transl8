FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    redis==5.0.1 \
    prometheus-client==0.19.0

# Copy exporter script
COPY queue-metrics-exporter.py /app/

# Make script executable
RUN chmod +x /app/queue-metrics-exporter.py

# Expose metrics port
EXPOSE 9090

# Run exporter
CMD ["python", "/app/queue-metrics-exporter.py"]
